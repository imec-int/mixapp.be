offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 20px
	background-image url('/images/bg.jpg')

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none


.content
	text-align center
	height 100%
	width 100%


.header
	background-color: #3D4750;
	background-image: url("/images/gears_small.png");
	background-position: left bottom;
	background-repeat: no-repeat;
	border-bottom: 1px solid #B2C4CD;
	padding-bottom: 22px;
	padding-top: 22px;
	position: relative;
	text-align: center;
	width: 100%;

	>h2
		color: #FFFFFF;
		font-size: 15px;
		text-shadow: 0 1px 1px #3E4B55;

.info
	color: #3D4750;
	margin-bottom: 30px;
	margin-top: 25px;
	text-align: center;
	text-shadow: 0 1px 1px #FFFFFF;
	font-weigth 100
	padding-left 10px
	padding-right 10px

.howto
	border 1px solid black
	width 200px
	max-width 100%

.ip
	font-size 10px

.small
	margin-top 4px
	font-size 16px


// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 16px

	.small
		font-size 12px
